<!DOCTYPE html>
<html>
    <head>
        <title>Group List</title>
    </head>
    <body>
        <h1>Group List</h1>
        {{#each groups}}
        <div>
            <h2>{{name}}</h2>
            <p><strong>Description:</strong> {{description}}</p>
            <p><strong>Events:</strong></p>
            {{#each events}}
            <div>
                <h3>{{name}}</h3>
                <p><strong>ID:</strong> {{id}}</p>
                <p><strong>Date:</strong> {{date}}</p>
                <p><strong>Venue:</strong> {{venue.name}} - {{venue.city}}, {{venue.country}}</p>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </body>
</html>